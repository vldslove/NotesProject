<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_fourth_page_background"
        android:scaleType="centerCrop"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/skip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/public_sans_thin"
            android:text="@string/skip"
            android:textColor="@color/textOnPageColor"
            android:textFontWeight="400"
            android:textSize="@dimen/skipTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/red_hat_display"
            android:text="@string/spiice"
            android:textColor="@color/textOnPageColor"
            android:textFontWeight="500"
            android:textSize="@dimen/spiiceInfoPageSize"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fourthpage_phone"
            android:layout_marginBottom="105dp"
            android:layout_gravity="center"
            android:contentDescription="TODO" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/public_sans_light"
            android:text="@string/text_fourthpage"
            android:textAlignment="center"
            android:textColor="@color/textOnPageColor"
            android:textFontWeight="400"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fourthpage_diaporama"
            android:layout_gravity="center"
            android:layout_marginBottom="73dp"
            android:contentDescription="TODO" />

    </LinearLayout>


</FrameLayout>